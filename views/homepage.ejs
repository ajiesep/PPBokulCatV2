<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>

    <!-- Script -->
    <%- include('./partials/_script') %>

    <style>
      .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .card-hover:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }
      .category-card-hover:hover {
        background-color: #f3f4f6;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="bg-gray-100 text-gray-900 dark:bg-gray-900 dark:text-white">
    <!-- Navbar -->
    <%- include('./partials/_navbar') %>

    <!-- Title -->
    <div class="my-10 text-4xl font-bold text-center container mx-auto">
      <h1 class="text-black">CARI BARANGNYA DISINI</h1>
    </div>

    <!-- Search Bar -->
    <div class="my-10 pb-4 text-center container mx-auto">
      <form
        class="flex items-center max-w-lg mx-auto"
        method="get"
        action="/buyer"
      >
        <label class="sr-only">Search</label>
        <div class="relative w-full">
          <input
            type="text"
            class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-3 shadow-sm transition-colors dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            placeholder="Cari barangnya disokin yaaa"
            name="search"
          />
          <button
            type="button"
            class="absolute inset-y-0 right-0 flex items-center pr-4 hover:text-blue-600 transition-colors"
          ></button>
        </div>
        <button
          type="submit"
          class="inline-flex items-center py-2.5 px-4 ms-3 text-sm font-semibold text-white bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 focus:ring-4 focus:ring-blue-300 rounded-lg shadow-lg transition-transform transform hover:scale-105 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          <svg
            class="w-5 h-5 me-2"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 20 20"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
            />
          </svg>
          Search
        </button>
      </form>
    </div>

    <!-- Product Cards -->
    <div class="container mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
        <% products.forEach(el => { %> <% if (el.stock > 0) { %>
        <div
          class="card-hover w-full max-w-sm bg-white border border-gray-200 rounded-xl shadow-lg transition-transform transform hover:scale-105 hover:shadow-2xl dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
        >
          <!-- Product Image -->
          <img
            class="p-8 rounded-t-xl transition-transform transform hover:scale-105"
            src="<%= el.imageURL %>"
            alt="product image"
          />

          <!-- Product Details -->
          <div class="px-5 pb-5">
            <h5
              class="text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"
            >
              <%= el.productName %>
            </h5>

            <!-- Stock Information -->
            <div
              class="text-lg font-semibold text-gray-700 dark:text-gray-300 my-4"
            >
              Stock: <%= el.stock %>
            </div>

            <!-- Price and Button -->
            <div class="flex items-center justify-between">
              <span
                class="text-xl font-bold text-green-600 dark:text-green-400"
              >
                <%= rupiahFormat(el.price) %>
              </span>
              <a
                href="/buyer/buyProduct/<%= el.id %>"
                class="text-white bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
              >
                See Details
              </a>
            </div>
          </div>
        </div>
        <% } %> <% }); %>
      </div>
    </div>

    <!-- Category Title -->
    <div
      class="my-10 pb-2 text-4xl font-bold text-center border-b-4 border-b-sky-900 container mx-auto"
    >
      <h2 class="text-blue-800 dark:text-blue-300">Categories</h2>
    </div>

    <!-- Category Cards -->
    <div class="container mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-2 gap-6">
        <% categories.forEach(el => { %>
        <a
          href="buyer/categories/<%= el.id %>"
          class="category-card-hover flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
        >
          <div class="flex flex-col justify-between p-4 leading-normal">
            <h5
              class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
              <%= el.categoryName %>
            </h5>
          </div>
        </a>
        <% }); %>
      </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/_footer') %>
  </body>
</html>
