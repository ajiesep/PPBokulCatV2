<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bokul Product</title>

    <!-- Script -->
    <%- include('./partials/_script') %>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900">
    <!-- Navbar -->
    <%- include('./partials/_navbar') %>

    <!-- Title -->
    <div
      class="mt-10 text-4xl font-extrabold text-center text-gray-900 dark:text-white container mx-auto"
    >
      <h1>Bokul product</h1>
    </div>

    <!-- Main Content -->
    <section class="py-12">
      <div class="container mx-auto">
        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-10 p-8 bg-white rounded-lg shadow-lg transition-transform duration-300 ease-in-out hover:shadow-xl hover:scale-105 dark:bg-gray-800 dark:shadow-none dark:hover:shadow-lg"
        >
          <!-- Product Image -->
          <div
            class="flex justify-center items-center p-4 bg-gray-100 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 ease-in-out dark:bg-gray-700"
          >
            <img
              src="<%= product.imageURL %>"
              alt="productImage"
              class="rounded-lg max-w-full h-auto transition-transform transform hover:scale-110 duration-300 ease-in-out shadow-lg"
            />
          </div>

          <!-- Product Details -->
          <div
            class="space-y-8 p-6 bg-gray-50 rounded-lg shadow-md dark:bg-gray-900"
          >
            <!-- Product Name -->
            <h3
              class="text-5xl font-bold text-gray-900 dark:text-white tracking-wide"
            >
              <%= product.productName %>
            </h3>

            <!-- Description Section -->
            <div class="space-y-4">
              <label
                class="text-lg font-semibold text-gray-700 dark:text-gray-300"
              >
                Description:
              </label>
              <p
                class="text-base text-justify text-gray-800 dark:text-gray-200 leading-relaxed"
              >
                <%= product.description %>
              </p>
            </div>

            <!-- Stock and Price -->
            <div
              class="flex flex-col sm:flex-row sm:justify-between space-y-4 sm:space-y-0"
            >
              <h3
                class="text-lg font-semibold text-gray-900 dark:text-gray-200"
              >
                Stock: <%= product.stock %>
              </h3>
              <h3 class="text-lg font-bold text-green-600 dark:text-green-400">
                Price: <%= rupiahFormat(product.price) %>
              </h3>
            </div>

            <!-- QR Code Section -->
            <div class="text-center mt-10">
              <label
                class="block text-lg font-semibold text-gray-700 dark:text-gray-300 mb-4"
              >
                Scan QR to Bokul:
              </label>
              <div class="flex justify-center">
                <img
                  src="<%= qrDataURL %>"
                  alt="QR Code"
                  class="w-48 h-48 rounded-lg shadow-lg transition-transform transform hover:scale-110 duration-300 ease-in-out"
                />
              </div>
            </div>

            <!-- Buy Button -->
            <div class="text-center mt-8">
              <a
                href="/buyer/buyProduct/<%= product.id%>/stockDecrease"
                class="inline-block text-white bg-gradient-to-r from-blue-500 to-blue-700 hover:bg-gradient-to-l focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-lg px-8 py-3 transition-all duration-300 ease-in-out dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800"
              >
                Bokul Product
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <%- include('./partials/_footer') %>
  </body>
</html>
