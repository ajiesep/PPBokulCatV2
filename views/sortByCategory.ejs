<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
    <style>
      body {
        background-image: url("https://images.unsplash.com/photo-1460923396110-d57007bc184f?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        font-family: "Arial", sans-serif;
      }
      .container-background {
        background: rgba(255, 255, 255, 0.9);
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
      }
      .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .card-hover:hover {
        transform: scale(1.05);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
      }
      .card-image {
        transition: transform 0.3s ease;
      }
      .card-image:hover {
        transform: scale(1.05);
      }
      .button {
        background: linear-gradient(90deg, #28a745, #218838);
        color: #fff;
        transition: background 0.3s;
      }
      .button:hover {
        background: linear-gradient(90deg, #218838, #1e7e34);
      }
      .category-button {
        background: linear-gradient(90deg, #17a2b8, #117a8b);
        color: #fff;
        transition: background 0.3s;
      }
      .category-button:hover {
        background: linear-gradient(90deg, #117a8b, #0c5460);
      }
    </style>

    <!-- Script -->
    <%- include('./partials/_script') %>
  </head>
  <body class="bg-gray-100 text-gray-900 dark:bg-gray-900 dark:text-white">
    <!-- Navbar -->
    <%- include('./partials/_navbar') %>

    <!-- Title -->
    <div
      class="my-10 text-4xl font-bold text-center container mx-auto container-background"
    >
      <h1 class="text-black dark:text-black"><%= title %></h1>
    </div>

    <!-- Filter Buttons -->
    <div
      class="container flex flex-wrap gap-4 my-6 mx-auto pb-4 justify-center"
    >
      <!-- All Categories Button -->
      <div>
        <a href="/customer/categories">
          <button
            class="button px-6 py-3 rounded-full font-semibold text-white bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 transition-all duration-300 ease-in-out shadow-md hover:shadow-lg"
          >
            All
          </button>
        </a>
      </div>

      <!-- Category Specific Buttons -->
      <% categories.forEach(el => { %>
      <div>
        <a href="/customer/categories/<%= el.id %>">
          <button
            class="category-button px-6 py-3 rounded-full font-semibold text-white bg-gradient-to-r from-teal-400 to-teal-600 hover:from-teal-500 hover:to-teal-700 transition-all duration-300 ease-in-out shadow-md hover:shadow-lg"
          >
            <%= el.categoryName %>
          </button>
        </a>
      </div>
      <% }); %>
    </div>

    <!-- Product Cards -->
    <div class="container mx-auto container-background">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
        <% category.Products.forEach(el => { %>
        <div
          class="card-hover w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-lg dark:bg-gray-800 dark:border-gray-700"
        >
          <img
            class="card-image p-8 rounded-t-lg"
            src="<%= el.imageURL %>"
            alt="product image"
          />
          <div class="px-5 pb-5">
            <h5
              class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"
            >
              <%= el.productName %>
            </h5>
            <div class="flex items-center justify-between">
              <span
                class="text-3xl font-bold text-green-600 dark:text-green-400"
                ><%= rupiahFormat(el.price) %></span
              >
              <a
                href="/customer/buyProduct/<%= el.id %>"
                class="button text-white rounded-lg text-sm px-5 py-2.5"
              >
                See Details
              </a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
